<h1>Sign In</h1>

<form class="sign-in" action="<%= session_url %>" method="post">
  <%= auth_token %>

  <label>username
    <input type="text" name="user[username]">
  </label>

  <label>password
    <input type="password" name="user[password]">
  </label>

  <input type="submit" value="Sign In">
</form>
