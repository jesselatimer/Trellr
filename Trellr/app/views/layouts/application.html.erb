<!DOCTYPE html>
<html>
<head>
  <title>Trellr</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="header">
    <h1><a href="#">Trellr</a></h1>
    <div class="user-info">
    <% if current_user %>
      <%= button_to "Sign Out", session_url, method: :delete %>
      <p>Signed in as: <%= current_user.username %></p>
    <% else %>
      <p>
        <%= link_to "Sign In", new_session_url %> |
        <%= link_to "Sign Up", new_user_url %>
      </p>
    <% end %>
    </div>
  </div>

  <% if flash && flash["errors"] %>
    <ul>
      <% flash["errors"].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

<%= yield %>

</body>
</html>
